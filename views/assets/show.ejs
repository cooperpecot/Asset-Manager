<% layout('layouts/boilerplate') %> 
<div class="row">
    <div class="col-4 offset-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title"><%= a.name %> - <%= a.assetTag %></h5>
                <p class="card-text">
                    Unique ID: <%= a.uniqueID %> <br>
                    <% if(a.assigned){ %> 
                    Assigned to <a href="/locations/<%= a.location._id %> "><%= a.location.name %></a> <br>    
                    <%} else { %>
                    Unassigned - <%= a.location.name %> 
                    <%} %>
                </p> 
            </div>
        </div>
        <div class="row mt-3 text-center">  
            <div class="col-4">
                <a class="btn btn-primary mb-3" href="/assets/<%= a._id %>/edit"><i class="bi bi-pencil"></i> Edit</a>
            </div>
            <form class="col-4 " action="/assets/<%=a._id%>?_method=DELETE" method="POST">
                <button class="btn btn-danger mb-3"><i class="bi bi-trash3"></i> Delete</button>
            </form>
            <div class="col-4">
                <a class="btn btn-secondary" href="/assets">Back</a>
            </div>
        </div>
    </div>
</div>

    
