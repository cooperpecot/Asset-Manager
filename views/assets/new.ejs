<% layout('layouts/boilerplate') %> 
<div class="row">
    <h1 class="text-center">New Asset</h1>
    <div class="col-6 offset-3">
        <form action="/assets" method="post">
            <div class="mb-3">
                <label class="form-label" for="asset-name">Name: </label>
                <input class="form-control" type="text" name="asset[name]" id="asset-name">
            </div>
            <div class="mb-3">
                <select class="form-select" name="asset[category]" id="asset-category">
                    <option selected>Select Asset Category</option>
                    <option value="Vehicle">Vehicle</option>
                    <option value="Tool">Tool</option>      
                    <option value="Phone">Phone</option>
                    <option value="Laptop/Tablet">Laptop / Tablet</option>
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label" for="asset-id">Unique ID: </label>
                <input class="form-control" type="text" name="asset[uniqueID]" id="asset-id">
                <small id="ID-help-block">ie Serial, Phone Number, VIN, etc</small>
            </div>
            <div class="mb-3">
                <label class="form-label"for="asset-assigned">Is this asset assigned? </label>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="asset[assigned]" value="true" id="assigned">
                        <label for="assigned" class="form-check-label">Yes</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="asset[assigned]" value="false" id="unassigned">
                        <label for="unassigned" class="form-check-label">No</label>
                    </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="asset-location">Location: </label>
                <input class="form-control" type="text" name="asset[location]" id="asset-location">
            </div>
            <div class="mb-3">
                <label class="form-label" for="asset-tag">Tag Number: </label>
                <input class="form-control" type="text" name="asset[assetTag]" id="asset-tag">
            </div>
            <button class="btn btn-success">Add Asset</button>
        </form>
        <a class="btn btn-secondary mt-3" href="/assets">Cancel</a>
    </div>
</div>
    
