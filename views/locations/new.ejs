<% layout('layouts/boilerplate') %> 

<div class="row">
    <h1 class="text-center">New Location</h1>
    <div class="col-6 offset-3">
        <form class="needs-validation" action="/locations" method="post" novalidate>
            <div class="mb-3">
                <label class="form-label" for="location-name">Name: </label>
                <input class="form-control" type="text" name="location[name]" id="asset-name" required>
                <div class="invalid-feedback">Name is required!</div>
            </div>
            <div class="mb-3">
                <div class="form-group">
                    <label for="inputAddress">Address</label>
                    <input type="text" class="form-control" name="address[address]" id="inputAddress" placeholder="1234 Main St">
                  </div>
                  <div class="form-group">
                    <label for="inputAddress2">Address 2</label>
                    <input type="text" class="form-control" name="address[address2]" id="inputAddress2" placeholder="Apartment, studio, or floor">
                  </div>
                  <div class="form-row">
                    <div class="form-group col-md-6">
                      <label for="inputCity">City</label>
                      <input type="text" class="form-control" name="address[city]" id="inputCity">
                    </div>
                    <div class="form-group col-md-4">
                      <label for="inputState">State</label>
                      <input type="text" class="form-control" name="address[state]" id="inputState" maxlength="2">
                      </input>
                    </div>
                    <div class="form-group col-md-2">
                      <label for="inputZip">Zip</label>
                      <input type="text" class="form-control" name="address[zip]" id="inputZip">
                    </div>
                  </div>
            </div>
            <div class="mb-3">
                <select class="form-select" name="location[category]" id="location-category" required>
                    <option selected value="">Select Location Category</option>
                    <option value="Vehicle">Vehicle</option>
                    <option value="Employee">Employee</option>      
                    <option value="Office/Warehouse">Office / Warehouse</option>
                    <option value="Jobsite">Jobsite</option>
                </select>
                <div class="invalid-feedback">Please select a category</div>
            </div>

            <button class="btn btn-success">Add Location</button>
        </form>
        <a class="btn btn-secondary mt-3" href="/locations">Cancel</a>
    </div>
</div>